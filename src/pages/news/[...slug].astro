    color: #ea580c;
    text-decoration: underline;
  }
  
  .prose a:hover {
    color: #c2410c;
  }
  
  .prose blockquote {
    border-left: 4px solid #ea580c;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #6b7280;
  }
  
  .prose code {
    background-color: #f3f4f6;
    padding: 0.125rem 0.25rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
  
  .prose pre {
    background-color: #1f2937;
    color: #f9fafb;
    padding: 1rem;
